<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="26dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp" />



    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#5C4E4E"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="125 \n Posts"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintLeft_toRightOf="@id/image1"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20K \n Followers"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintLeft_toRightOf="@id/textView2"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 \n Following"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintLeft_toRightOf="@id/textView3"/>


    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address \ndescription"
        app:layout_constraintTop_toBottomOf="@id/user"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>




    <ImageView
        android:id="@+id/i1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#5C4E4E"
        />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintLeft_toRightOf="@id/i1"
        android:layout_marginLeft="15dp"
        android:background="#5C4E4E" />
    <ImageView
        android:id="@+id/i3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintLeft_toRightOf="@id/i2"
        android:layout_marginLeft="15dp"
        android:background="#5C4E4E" />
    <ImageView
        android:id="@+id/i4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintLeft_toRightOf="@id/i3"
        android:layout_marginLeft="15dp"
        android:background="#5C4E4E" />
    <ImageView
        android:id="@+id/i5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintLeft_toRightOf="@id/i4"
        android:layout_marginLeft="15dp"
        android:background="#5C4E4E" />
    <ImageView
        android:id="@+id/i6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/adress"
        app:layout_constraintLeft_toRightOf="@id/i5"
        android:layout_marginLeft="15dp"
        android:background="#5C4E4E" />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/i1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#0747E6" />

    <ImageView
        android:id="@+id/b2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/i1"
        app:layout_constraintLeft_toRightOf="@id/b1"
        android:background="#0747E6" />

    <ImageView
        android:id="@+id/b3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/i1"
        app:layout_constraintLeft_toRightOf="@id/b2"
        android:background="#0747E6" />

    <ImageView
        android:id="@+id/b4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/i1"
        app:layout_constraintLeft_toRightOf="@id/b3"
        android:background="#0747E6" />



    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/darker_gray"/>


    <ImageView
        android:id="@+id/q1"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#5C4E4E"
        android:layout_marginRight="21dp"/>

    <ImageView
        android:id="@+id/q2"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf ="@id/q1"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#5C4E4E"
        android:layout_marginLeft="21dp"/>
    <ImageView
        android:id="@+id/q3"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf ="@id/q2"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#5C4E4E"
        android:layout_marginLeft="21dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>